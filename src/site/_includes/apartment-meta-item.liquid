{% if item and item.size != 0 %}
<tr>
  <td class="definition_term">{{ label }}</td>
  <td class="definition">
  {%- if label == "Email" -%}
    <a href="mailto:{{ item }}">{{ item }}</a>
  {%- elsif label == "Phone" -%}
    <a href="tel:{{ item }}" >{{ item }}</a>
  {%- elsif label == "Website" -%}
    <a href="{{ item }}" target="_blank" rel="noopener">{{ item }}</a>
  {%- elsif label == "Additional Info" -%}
    <ul>
      {%- for link in item -%}
        <li><a href="{{ link }}" target="_blank" rel="noopener">{{ link }}</a></li>
      {%- endfor -%}
    </ul>
  {%- elsif label == "Address" -%}
     {{ item }} (<a href="https://maps.google.com/maps?q={{item | url_encode}}+{{apartment.city | url_encode}}&country=us" target="_blank" rel="noopener">map</a>)
  {%- else -%}
    {{ item }}
  {%- endif -%}
  </td>
</tr>
{% endif %}